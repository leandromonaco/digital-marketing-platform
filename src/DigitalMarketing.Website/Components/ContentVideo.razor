@using DigitalMarketing.Model.Settings
@using DigitalMarketing.Core.Database

@if (Tenant != null && Section != null)
{
    @if (Section.Layout.Equals("VideoLeft"))
    {
        <section class="@Section.Theme">
            <div class="container">
                <div class="row v-align-children">
                    <div class="col-md-7 col-sm-6 text-center mb-xs-24">
                        <div class="local-video-container">
                            <video controls="">
                                <source src="@Section.BackgroundVideo" type="video/mp4">
                            </video>
                            <div class="play-button" style="opacity: 0;"></div>
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-1 col-sm-5 col-sm-offset-1">
                        <h3>@Section.Title</h3>
                        <p>
                            @Section.Paragraph
                        </p>
                        <a class="btn btn-filled btn-lg mb0" @onclick="e => _isModalOpened = true" target="_blank">@Section.ButtonText</a>
                    </div>
                </div>
            </div>
        </section>
    }
    else if (Section.Layout.Equals("VideoRight"))
    {
        <section class="@Section.Theme">
            <div class="container">
                <div class="row v-align-children">
                    <div class="col-md-4 col-sm-5 mb-xs-24">
                        <h3>@Section.Title</h3>
                        <p>
                            @Section.Paragraph
                        </p>
                        <a class="btn btn-filled btn-lg mb0" @onclick="e => _isModalOpened = true" target="_blank">@Section.ButtonText</a>
                    </div>
                    <div class="col-md-7 col-md-offset-1 col-sm-6 col-sm-offset-1 text-center">
                        <div class="local-video-container">
                            <video controls="">
                                <source src="@Section.BackgroundVideo" type="video/mp4">
                            </video>
                            <div class="play-button" style="opacity: 0;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
<Modal Tenant="@Tenant" Section="@Section" @bind-Open="_isModalOpened" />

@code {
    [Parameter]
    public Tenant Tenant { get; set; }

    [Parameter]
    public Section Section { get; set; }

    public bool _isModalOpened;
}
